<%- include("../partials/header")%>
  <%- include('../partials/navbar') %>

    <!-- carausol -->
    <div class="container mt-5 p-5">
      <%- include("../partials/flash")%>
      <div id="myCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">

        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              src="https://www.ncarb.org/sites/default/files/styles/800_detail_main/public/Blog/2018%20Blog/June%202018/ArchitectureWebsites.png?itok=G4oHsZb9"
              alt="" style="background-repeat: no-repeat; background-size: cover; " class="bd-placeholder-img"
              width="100%" height="400px">
          </div>
          <div class="carousel-item ">
            <img
              src="https://galido.net/blog/wp-content/uploads/2020/09/toptechblogsyear-660x330.png"
              alt="" style="background-repeat: no-repeat; background-size: cover; " class="bd-placeholder-img"
              width="100%" height="400px">
          </div>
          <div class="carousel-item">
            <img src="https://www.ceo-review.com/wp-content/uploads/2020/07/Blockchain-Technology-image-1920-x-1080.jpg"
              alt="" style="background-repeat: no-repeat; background-size: cover; " class="bd-placeholder-img"
              width="100%" height="400px">
          </div>
          <div class="carousel-item ">
            <img
              src="https://d112uwirao0vo9.cloudfront.net/wp-content/uploads/2019/06/AI-Software-Testing-1-1024x512.jpg"
              alt="" style="background-repeat: no-repeat; background-size: cover; " class="bd-placeholder-img"
              width="100%" height="400px">
          </div>

          <div class="carousel-item">
            <img src="https://mk0futurumreseabr7pm.kinstacdn.com/wp-content/uploads/2016/11/Marketing-to-Gen-C-How-Companies-Need-to-Evolve-Final.jpg"
              alt="" style="background-repeat: no-repeat; background-size: cover; " class="bd-placeholder-img"
              width="100%" height="400px">
          </div>

          <div class="carousel-item ">
            <img
              src="https://www.devdigital.com/media/blog/News_79.jpg"
              alt="" style="background-repeat: no-repeat; background-size: cover; " class="bd-placeholder-img"
              width="100%" height="400px">
          </div>
          

        </div>

      </div>
    </div>

    <!-- cards -->

    <div class="container mt-3 p-5">
      


      <div class="row">
        <%for(let b of blogs){%>
          <div class="col-lg-6">
            <div class="card mb-3 mw-100 p-2 shadow-sm p-3 mb-5 bg-body rounded">
              <div class="row g-0">
                <div class="col-md-4">
                  <img class="index" src="<%= b.img %>" alt="..." width="170px" height="230px">
                </div>
                <div class="col-md-8">
                  <div class="card-body ms-2">
                    <h5 class="card-title">
                      <%= b.title %>
                    </h5>
                    <p class="card-text">
                      <%= b.bodycontent.substring(0,90)%>...
                    </p>
                    <p class="card-text"><small class="text-muted">Written By - <%= b.writer %></small></p>
                    <a href="/blogs/<%= b._id %> " class="btn btn-outline-primary mb-1">Read More</a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <%}%>
      </div>




  </div>


    <%- include('../partials/footer') %>